<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.ModernClockApp" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorError">@color/error</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <item name="colorOnBackground">@color/on_background</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="colorOnError">@color/on_error</item>
        <item name="android:statusBarColor">@color/primary</item>
    </style>
    
    <!-- Digital Clock Text Style -->
    <style name="DigitalClockStyle">
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">@color/clock_digit</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textAlignment">center</item>
    </style>
    
    <!-- Date Text Style -->
    <style name="DateTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/on_surface</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAlignment">center</item>
    </style>
    
    <!-- Navigation Tab Style -->
    <style name="NavigationTabStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <!-- Timer/Stopwatch Button Style -->
    <style name="TimerButtonStyle" parent="Widget.Material3.Button">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">28dp</item>
    </style>
</resources>